{
  "version": 2,
  "builds": [
    {
      "src": "api/generate-flashcards.js",
      "use": "@vercel/node"
    },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { 
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/generate-flashcards",
      "methods": ["POST", "OPTIONS"],
      "dest": "api/generate-flashcards.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "VERCEL_URL": "https://www.unitask.space"
  }
} 